generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  username String    @unique
  password String?
  created_at  DateTime?
  updated_at  DateTime? 
  userAuthentication  UserAuthentication  @relation(fields: [user_authtentication_id], references: [id])
  user_authtentication_id String
  workouts Workout[]
}

model UserAuthentication {
  id       String    @id @default(uuid())
  email    String    @unique
  otp         String?
  expires_at  DateTime?
  user User[]
}

model Workout {
  id       String    @id @default(uuid())
  title    String   
  reps     Int
  load     Int
  user     User      @relation(fields: [user_id], references: [id])
  user_id   String
  created_at  DateTime  @default(now())
}


